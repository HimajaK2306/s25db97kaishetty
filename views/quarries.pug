extends layout

block content
  h1= title
  - let items = results
  p Below are some quarry search results:

  // ðŸ”¹ Create New Quarry Button
  a.btn.btn-success.mb-3(href="/quarries/create") + Create New Quarry

  .container-fluid
    .row
      each quarry in items
        .col-sm-3.border.p-2
          h3 Name: #{quarry.quarries_type}
          p Depth: #{quarry.depth_meters} meters
          p Material: #{quarry.material}

          // ðŸ”¸ Update Button (already working)
          button.btn.btn-primary.mt-2(
            onclick=`dispatch('/quarries/update?id=${quarry._id}')`
          ) Update

          // ðŸ”¸ View/Detail Button (fix: add /detail)
          button.btn.btn-info.mt-2.ms-2(
            onclick=`dispatch('/quarries/detail?id=${quarry._id}')`
          ) Detail View

          // ðŸ”¸ Delete Button (fix: add /delete)
          button.btn.btn-danger.mt-2.ms-2(
            onclick=`dispatch('/quarries/delete?id=${quarry._id}')`
          ) Delete

  script.
    function dispatch(path) {
      window.location.href = path;
    }

  p
    a(href="/") Back to Home
