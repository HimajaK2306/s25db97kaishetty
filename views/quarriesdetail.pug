extends layout

block content
  h1= title
  - let quarriesid = toShow._id
  - let quarries_type = toShow.quarries_type
  - let depth_meters = toShow.depth_meters
  - let material = toShow.material

  div
    .row
      .quarriesAttr.mr-3 quarries ID is:
      div #{quarriesid}
    .row
      .quarriesAttr.mr-3 quarries Type is:
      div #{quarries_type}
    .row
      .quarriesAttr.mr-3 quarries depth_meterss is:
      div #{depth_meters}
    .row
      .quarriesAttr.mr-3 quarries material is:
      div #{material}
